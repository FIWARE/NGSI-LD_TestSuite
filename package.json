{
  "name": "ngsi-ld_tests",
  "version": "1.0.0",
  "description": "This project is intended to define a test suite for NGSI-LD , the evolution of NGSIv2 for supporting linked data based on JSON-LD.",
  "main": "index.js",
  "dependencies": {
    "acorn": "^5.7.3",
    "request": "^2.88.0"
  },
  "devDependencies": {
    "ajv": "^6.5.2",
    "eslint": "^5.6.0",
    "eslint-config-tamia": "^6.0.1",
    "eslint-plugin-prettier": "^3.0.0",
    "husky": "^1.1.0",
    "jest": "^23.6.0",
    "lint-staged": "^7.3.0",
    "memfs": "2.10.1",
    "prettier": "^1.14.2"
  },
  "engines": {
    "node": ">=8.6"
  },
  "scripts": {
    "test": "jest",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --cache --fix",
    "precommit": "lint-staged",
    "prettier": "prettier --single-quote --trailing-comma es5 --write **/*.js *.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --parser flow --write",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fiware/NGSI-LD_Tests.git"
  },
  "author": "FIWARE Foundation e.V.",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/fiware/NGSI-LD_Tests/issues"
  },
  "homepage": "https://github.com/fiware/NGSI-LD_Tests#readme"
}
